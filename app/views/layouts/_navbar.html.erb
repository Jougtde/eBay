<div class="ui menu">
  <a href="/" class="item">Index</a>
  <a href="/users" class="item">Users</a>
  <div class="ui simple dropdown item">
    Products
    <i class="dropdown icon"></i>
    <div class="menu">
      <a href="/products" class="item">Show products</a>
      <a href="/products/new" class="item">Add new product</a>
    </div>
  </div>
  <div class="ui simple dropdown item">
    Categories
    <i class="dropdown icon"></i>
    <div class="menu">
      <a href="/categories" class="item">Show categories</a>
      <a href="/categories/new" class="item">Add new category</a>
    </div>
  </div>
  <div class="right menu">
    <% if user_signed_in? %>
    <div class="item">Connected as&nbsp;<strong><%= current_user.first_name %></strong></div>
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'item' %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'item'  %>
    <% else %>
    <%= link_to "Register", new_user_registration_path, :class => 'item'  %>
    <%= link_to "Login", new_user_session_path, :class => 'item'  %>
    <% end %>
  </div>
</div>
