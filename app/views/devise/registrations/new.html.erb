<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<% if resource.errors.empty? %>
<% else %>
<div class="ui error message">
<%= devise_error_messages! %>
</div>
<% end %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <div class="ui message">
      <h2>Register</h2>
    </div>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :last_name, placeholder: "Last Name" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, placeholder: "E-mail Address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="home icon"></i>
            <%= f.text_field :address, placeholder: "Postal Address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 char min)" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>
        </div>
        <br />
        <div class="actions"><%= f.submit "Register", class: "ui blue basic button"%></div>
      </div>
    </form>

    <div class="ui message">
      Already a member ?<br /><br />
      <a href="/users/sign_in" class="ui blue basic button">Login</a>
    </div>
  </div>
</div>
<% end %>
